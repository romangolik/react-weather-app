{
  "extends": "stylelint-config-standard",
  "rules": {
    "import-notation": "string",
    "at-rule-empty-line-before": false,
    "rule-empty-line-before": false,
    "at-rule-no-unknown": null,
    "color-hex-length": "long",
    "color-no-invalid-hex": true,
    "custom-property-empty-line-before": false,
    "declaration-empty-line-before": false,
    "declaration-block-trailing-semicolon": "always",
    "indentation": 2,
    "color-function-notation": "legacy",
    "selector-class-pattern": false,
    "function-no-unknown": false,
    "font-family-name-quotes": "always-where-recommended",
    "no-descending-specificity": null,
    "no-invalid-double-slash-comments": false,
    "block-opening-brace-space-before": ["always", {
      "ignoreAtRules": ["if", "else", "for", "each", "while", "media", "supports", "include", "mixin"]
    }],
    "value-list-comma-newline-after": "always-multi-line"
  }
}